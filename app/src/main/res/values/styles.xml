<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <!--<item name="searchViewStyle">@style/AppTheme.SearchView</item>-->
    </style>

    <style name="Widget.MyApp.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="theme">@style/ThemeOverlay.MyApp.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="actionMenuTextColor">@color/secondary_text</item>
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
        <item name="autoCompleteTextViewStyle">@style/suggestions_background</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="closeIcon">@drawable/ic_close_black_24dp</item>
        <!--<item name="suggestionRowLayout">@layout/dropdown_layout</item>-->
        <item name="android:maxWidth">99999dp</item>
        <!--<item name="layout">@layout/search_layout</item>-->
    </style>

    <!--<style name="suggestions" parent="Widget.AppCompat.Light.AutoCompleteTextView">-->
        <!--<item name="android:width">10dp</item>-->
    <!--</style>-->

    <style name="suggestions_background" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:popupBackground">@drawable/background</item>
        <item name="android:popupElevation">0dp</item>
        <item name="android:popupAnimationStyle">@style/popup_animation</item>
        <item name="android:popupWindowStyle">@style/popup_style</item>
        <item name="android:popupMenuStyle">@style/popup_style</item>
        <item name="android:popupTheme">@style/popup_style</item>
        <item name="android:listPopupWindowStyle">@style/popup_style</item>
    </style>

    <style name="popup_animation" parent="Widget.AppCompat.PopupMenu">
        <item name="android:windowEnterAnimation">@anim/abc_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/abc_popup_exit</item>
    </style>

    <style name="popup_style" parent="Widget.AppCompat.PopupMenu">
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
</resources>

